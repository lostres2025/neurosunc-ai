// Este archivo define la estructura de tu base de datos.

// Configuración del generador de cliente para TypeScript
generator client {
  provider = "prisma-client-js"
}

// Configuración de la fuente de datos
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==========================================
//          ENUMS (TIPOS DE DATOS)
// ==========================================

// NUEVO: Definimos los roles posibles
enum Role {
  USER  // Paciente (Valor por defecto)
  ADMIN // Psicóloga (Acceso al panel)
}

// ==========================================
//          MODELOS DE LA BASE DE DATOS
// ==========================================

// --- Modelo para los Usuarios ---
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  
  // NUEVO: Campo de rol con valor por defecto "USER"
  role      Role     @default(USER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relaciones inversas
  logs      DailyLog[]    
  sessions  GameSession[] 
}

// --- Modelo para los Registros Diarios (Check-in) ---
model DailyLog {
  id          String   @id @default(cuid())
  date        DateTime @db.Date 
   
  sleepHours  Float    
  mood        Int      
  fatigue     Int      
   
  // Relación con el modelo User
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())

  // Índice compuesto único
  @@unique([userId, date])
}

// Modelo para las Sesiones de Juego
model GameSession {
  id              String   @id @default(cuid())
  gameType        String   
  score           Int      
  level           Int      
   
  durationSeconds Int? 

  // Relación con User
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt       DateTime @default(now())
}